<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.pino.dao.UserMapper">

    <!-- 查找用户名是否同名 -->
    <select id="checkUsername" resultType="Integer" parameterType="String">
        SELECT COUNT(*)
        FROM `user`
        WHERE uk_username=#{username}
    </select>

    <!-- 插入用户 -->
    <insert id="insertUser">
        INSERT INTO `user`(uk_username, password, uk_email, self_introduction, header, tag_ids, gmt_create, gmt_modified)
        VALUES (#{ukUsername},#{password},#{ukEmail},#{selfIntroduction},#{header},#{tagIds},now(),now())
    </insert>

    <!-- 更新用户密码 -->
    <update id="updatePassword">
        UPDATE `user`
        SET password=#{password},gmt_modified=now()
        WHERE pk_uid=#{pkUid}
    </update>

    <update id="updateSelfIntroduce">
        UPDATE `user`
        SET self_introduction=#{selfIntroduce},gmt_modified=now()
        WHERE pk_uid=#{pkUid}
    </update>
</mapper>